@model WebExercise.Models.Product

@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="AdminProducts" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="m-b-15">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Option Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Description</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên sản phẩm</label>
                        <input type="text" class="form-control" asp-for="ProductName">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Mô tả ngắn</label>
                        <input type="text" class="form-control" asp-for="ShortDecs">
                    </div>
                    <div class="row">
                        <div class="form-gruuop col-md-6">
                            <label class="font-weight-semibold" formaction="productPrice">
                                Giá bán
                            </label>
                            <input type="text" class="form-control" asp-for="Price">
                        </div>
                        <div class="form-gruuop col-md-6">
                            <label class="font-weight-semibold" formaction="productPrice">
                                Giá giảm
                            </label>
                            <input type="text" class="form-control" asp-for="Discount">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productPrice">Số lượng tồn</label>
                        <input type="text" class="form-control" asp-for="UnitslnStock">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productCategory">Danh mục sản phẩm</label>
                        <select class="custom-select" asp-for="CatId" style="min-width: 200px;" asp-items="ViewBag.DanhMuc">
                            <option value="all" selected>Chọn tất cả</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productBrand">Ảnh nền</label>
                        <input type="file" name="fThumb" class="form-control" asp-for="Thumb">
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="m-t-25">
                            <div class="d-flex align-items-center">
                                <div class="switch m-t-5 m-l-10">
                                    <input type="checkbox" asp-for="Active" checked="">
                                    <label for="Active"></label>
                                </div>
                                <label>Public</label>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="switch m-t-5 m-l-10">
                                    <input type="checkbox" asp-for="HomeFlag" checked="">
                                    <label for="HomeFlag"></label>
                                </div>
                                <label>HomeFlag</label>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="switch m-t-5 m-l-10">
                                    <input type="checkbox" asp-for="BestSeller" checked="">
                                    <label for="BestSeller"></label>
                                </div>
                                <label>BestSeller</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">Tiêu đề</label>
                        <input type="text" class="form-control" asp-for="Title" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">MetaDesc</label>
                        <input type="text" class="form-control" asp-for="MetaDesc" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productSize">MetaKey</label>
                        <input type="text" class="form-control" asp-for="MetaKey" />
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <label class="font-weight-semibold" for="productName">Mô tả sản phẩm</label>
                    <input type="text" class="form-control" asp-for="Description">
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

<!-- page js -->
<script src="~/Adminassets/vendors/select2/select2.min.js"></script>
<script src="~/Adminassets/vendors/quill/quill.min.js"></script>
<script src="~/Adminassets/js/pages/e-commerce-product-edit.js"></script>

}